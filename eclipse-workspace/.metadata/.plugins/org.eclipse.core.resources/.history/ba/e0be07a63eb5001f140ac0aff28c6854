package practice;

public class Palindrome {

	public static void main(String[] args) {
		int number = 121;
		int reverse = 0;
		int remainder;
		while(number>0)
		{
			remainder = number%10;
			reverse = reverse*10+ remainder;
			number = number/10;
		}
		if(reverse==number)
		{
			System.out.println(number+" is an Palindrome Number");
		}

	}

}
